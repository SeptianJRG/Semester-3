<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test2"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etxtA"
        android:layout_width="288dp"
        android:layout_height="66dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/blue_clouds_phone_background_300x650"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCmtoM"
        app:layout_constraintEnd_toStartOf="@+id/btnMtoKm"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081" />

    <TextView
        android:id="@+id/txtHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="233dp"
        android:hint="0"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMtoKm" />

    <Button
        android:id="@+id/btnCmtoM"
        android:layout_width="91dp"
        android:layout_height="56dp"
        android:background="@drawable/blue_clouds_phone_background_300x650"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp"
        app:backgroundTint="#009688"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.357" />

    <Button
        android:id="@+id/btnMtoCm"
        android:layout_width="92dp"
        android:layout_height="57dp"
        android:layout_marginStart="149dp"
        android:layout_marginLeft="149dp"
        android:background="@drawable/blue_clouds_phone_background_300x650"
        android:textSize="20sp"
        app:backgroundTint="#009688"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintStart_toStartOf="@+id/btnCmtoM"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.357" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="99dp"
        android:layout_height="57dp"
        android:layout_marginStart="156dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="156dp"
        android:layout_marginRight="156dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/blue_clouds_phone_background_300x650"
        android:textSize="16sp"
        app:backgroundTint="#009688"
        app:layout_constraintBottom_toTopOf="@+id/btnChangee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMtoKm" />

    <Button
        android:id="@+id/btnChangee"
        android:layout_width="199dp"
        android:layout_height="54dp"
        android:background="@drawable/blue_clouds_phone_background_300x650"
        android:textSize="16sp"
        app:backgroundTint="#009688"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.896" />

    <Button
        android:id="@+id/btnMtoKm"
        android:layout_width="91dp"
        android:layout_height="57dp"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/blue_clouds_phone_background_300x650"
        android:textSize="20sp"
        app:backgroundTint="#009688"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCmtoM"
        app:layout_constraintVertical_bias="0.002" />

    <Button
        android:id="@+id/btnKmtoM"
        android:layout_width="92dp"
        android:layout_height="56dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="86dp"
        android:layout_marginRight="86dp"
        android:layout_marginBottom="141dp"
        android:background="@drawable/blue_clouds_phone_background_300x650"
        android:textSize="20sp"
        app:backgroundTint="#009688"
        app:layout_constraintBottom_toTopOf="@+id/btnClear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnMtoKm"
        app:layout_constraintTop_toBottomOf="@+id/btnMtoCm"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>